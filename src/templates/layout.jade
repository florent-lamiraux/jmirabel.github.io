doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['main.css'].url)
      script(src=contents.js['script.js'].url)
      script(type="text/javascript", async, src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-MML-AM_CHTML")

  body(class=bodyclass)
    div.body-wrap
      header.header
        div.content-wrap
          block header
            div.logo
              h1
                a(href=locals.url)= locals.name
              p.description= locals.description
              p.social
                a(href=locals.github)
                  img(width=46,src=contents.img['octocat.png'].url,alt='My Github account')
                script.
                  insert_mail_address();
              noscript Sorry, you need Javascript to email me
      div.menu
        a.menuitem(href=contents['index.md'].url) Home
        <!--a.menuitem(href=contents['projects.md'].url) Projects-->
        a.menuitem(href=contents['about.md'].url) About

      div#content
        div.content-wrap
          block content
      footer
        div.content-wrap
          block footer
            //section.about
              //!=contents['about.md'].html
            section.copy
              p &copy; #{ new Date().getFullYear() } #{ locals.owner }
    div.whitebottom
